<!-- Calendar Templates -->

<script type="text/template" id="calendar-template">
<div class="row">
  <div class="col-md-2 month-name"></div>
    <div class="col-md-7" style="text-align: center">
    <div class="calendar-button-row btn-group btn-group-sm">
      <button type="button" class="previous-week btn btn-default"><i class="fa fa-chevron-left"></i>Previous Week</button>
      <button type="button" class="view-month btn btn-default">Month View</button>
      <button type="button" class="goto-today btn btn-default">Today</button>
      <button type="button" class="view-week btn btn-default">Week View</button>
      <button type="button" class="next-week btn btn-default">Next Week<i class="fa fa-chevron-right"></i></button>
    </div>
  </div>

  <div class="col-md-2">
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        Date Types <span class="caret"></span>
      </button>
      <ul class="dropdown-menu show-date-types" role="menu">
        <li><div class="checkbox assign-open">
            <label>
              <input type="checkbox" class="show-open-date">Open Dates
            </label>
          </div>
        </li>
        <li><div class="checkbox assign-reduced-scoring">
            <label>
              <input type="checkbox" class="show-reduced-scoring-date">Reduced Credit Dates
            </label>
          </div>
        </li>
        <li><div class="checkbox assign-due">
            <label>
              <input type="checkbox" class="show-due-date">Due Dates
            </label>
          </div>
        </li>
        <li><div class="checkbox assign-answer">
            <label>
              <input type="checkbox" class="show-answer-date">Answer Dates
            </label>
          </div>
        </li>
      </ul>
    </div>
  </div>  


</div>

<div class="calendar-container">
  <div class="calendar-view">
    <table id='calendar-table' class='table-bordered'>
      <thead></thead><tbody></tbody>
    </table>
  </div>
</div>
</script>

<script type="text/template" id="calendar-date-popup-bar">
<table class="no-borders">
<tr><td>Time Assigned:</td><td><%=assign_time%></td></tr>
<tr><td>Users Assigned:</td><td><%=assigned_users.length%>/<%=total_users%></td></tr>
<tr><td style="padding-right: 5px">Visible To Students:</td><td><%=(visible=="1")?"Yes":"No"%></td></tr>
<%if(enable_reduced_scoring) {%>
  <tr><td>Reduced Scoring:</td><td><%=(enable_reduced_scoring=="1")?"Yes":"No"%></td></tr>
<%}%>
<tr><td colspan="2"><a href="#" onclick="return false" class="goto-problem-set-button" data-setname="<%=set_id%>">Visit Problem Set</a></td></tr>
</table>
</script>


